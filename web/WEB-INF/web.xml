<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>MovieDetailsServlet</servlet-name>
        <servlet-class>controller.MovieDetailsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditCommentServlet</servlet-name>
        <servlet-class>controller.EditCommentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteCommentServlet</servlet-name>
        <servlet-class>controller.DeleteCommentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SelectShowtimeServlet</servlet-name>
        <servlet-class>controller.SelectShowtimeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SelectSeatServlet</servlet-name>
        <servlet-class>controller.SelectSeatServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConfirmBookingServlet</servlet-name>
        <servlet-class>controller.ConfirmBookingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MovieDetailsServlet</servlet-name>
        <url-pattern>/movieDetails</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditCommentServlet</servlet-name>
        <url-pattern>/editComment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteCommentServlet</servlet-name>
        <url-pattern>/deleteComment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SelectShowtimeServlet</servlet-name>
        <url-pattern>/selectShowtime</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SelectSeatServlet</servlet-name>
        <url-pattern>/selectSeat</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConfirmBookingServlet</servlet-name>
        <url-pattern>/confirmBooking</url-pattern>
    </servlet-mapping>
</web-app>
